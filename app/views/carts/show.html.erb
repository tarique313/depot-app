<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h2>Your Cart</h2>
<table>
  <% %>
</table>
<ul>
  <% @cart.line_items.each do |item| %>
    <li><%= item.quantity %>&times;<%= item.product.title %></li>
  <% end %>
</ul>
<%= button_to 'Empty Cart', @cart, method: :delete, data: {confirm: 'Are you sure?'} %>
